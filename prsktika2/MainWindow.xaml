        <TextBox x:Name="vod"  Grid.Column="1" HorizontalAlignment="Left" Height="47" Margin="80,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147"/>
        <TextBlock x:Name="otv" Grid.Column="1" HorizontalAlignment="Left" Margin="41,29,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Height="48" Width="116" FontSize="14"/>
